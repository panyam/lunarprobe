<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="absolute" xmlns:local="*"
				creationComplete="onCreationComplete(event);"
				xmlns:ldbviews="views.*"
				>	
	<mx:Script>
		<![CDATA[
			import mx.core.UIComponent;
			import mx.managers.PopUpManager;
			import mx.containers.TitleWindow;
		function onCreationComplete(event): void
		{
			var aw:TitleWindow = new TitleWindow();
			aw.title = "Testing";
			mx.managers.PopUpManager.addPopUp(aw, this);
		}
		]]>
	</mx:Script>
	<mx:HDividedBox width="100%" height="100%">
	<mx:VDividedBox width="250" height="100%">
		<ldbviews:Contexts width="100%" height="30%">
			<mx:List id = "contextList" width="100%" height="100%">
			</mx:List>
		</ldbviews:Contexts>
		<ldbviews:Files width="100%" height="30%">
			<mx:List id = "fileList" width="100%" height="100%">
			</mx:List>
		</ldbviews:Files>
	</mx:VDividedBox>
	<mx:RichTextEditor showControlBar="false" enabled="false" id = "sourceFileArea" width="100%" height="100%">
	</mx:RichTextEditor>
	</mx:HDividedBox>
</mx:Application>