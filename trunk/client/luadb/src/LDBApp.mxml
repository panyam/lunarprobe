<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="absolute" xmlns:local="*"
				creationComplete="onCreationComplete(event);"
				xmlns:ldbviews="views.*"
				>	
	<mx:Script source="ldb_public.as"/>
	<mx:VBox width="100%" height="100%">
	<mx:MenuBar id = "mainMenuBar" labelField = "@label" itemClick = "onMainMenuItem(event);">
		<mx:XMLList>
			<menuitem id = "gameMI" label = "Game" enabled = "True">
				<menuitem id = "connectMI" label = "Connect..." enabled = "True"/>
			</menuitem>
		</mx:XMLList>
	</mx:MenuBar>
	<mx:HDividedBox width="100%" height="100%">
		<mx:VDividedBox width="250" height="100%">
			<ldbviews:Contexts title = "Contexts" width="100%" height="30%">
				<mx:List id = "contextList" width="100%" height="100%">
				</mx:List>
			</ldbviews:Contexts>
			<ldbviews:Files title = "Files" width="100%" height="30%">
				<mx:List id = "fileList" width="100%" height="100%">
				</mx:List>
			</ldbviews:Files>
		</mx:VDividedBox>
	    <mx:VDividedBox width = "100%" height = "100%">
	        <mx:RichTextEditor showControlBar="false" enabled="false" id = "sourceFileArea" width="100%" height="100%">
	        </mx:RichTextEditor>
	        <mx:TextArea id = "logArea" width = "100%" height = "200"> 
	        </mx:TextArea>
	    </mx:VDividedBox>
	</mx:HDividedBox>
	</mx:VBox>
</mx:Application>